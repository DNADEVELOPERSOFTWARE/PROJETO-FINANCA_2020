@using Microsoft.AspNetCore.Identity
@inject SignInManager<Entity.Entities.Users.ApplicationUser> SignInManager
@inject UserManager<Entity.Entities.Users.ApplicationUser> UserManager

<ul class="menu-nav-login">
@if (SignInManager.IsSignedIn(User))
{
    <li >
        <a  class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Bem vindo @User.Identity.Name!</a>
    </li>
    <li >
        <form  class="form-login" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button class="btn-login"  type="submit" >Sair</button>
        </form>
    </li>
}
else
{
    <li >
        <a class="nav-link text-left" asp-area="Identity" asp-page="/Account/Register">Registrar um nova conta</a>
    </li>
    <li >
        <a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
    </li>
}
</ul>
